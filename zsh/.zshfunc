	flash_ard_df()
	{
	    sudo dfu-programmer atmega16u2 erase
	    sudo dfu-programmer atmega16u2 flash --debug 1 ~/pbj/keyboard/files/firmware-16u2/Arduino-usbserial-uno.hex
	    sudo dfu-programmer atmega16u2 reset
	}

	flash_ard_kb()
	{
	    sudo dfu-programmer atmega16u2 erase
