##################################################
#global aliases
##################################################

alias  less='less -R'
alias  tree='tree -C'
alias  ls='ls --color'
alias  grep='grep --color=auto'

[ $(uname) = "Darwin" ] && alias ls=ls

## pipe aliases
alias -g pl=' | less'
alias -g pg=' | grep'

##################################################
#ls aliases
##################################################

alias ll='ls -lAh'
alias l='ls -lh' 
alias sll='ll | less -R'

##################################################
#grep aliases
##################################################

alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

##################################################
alias stree='tree | less'
alias zsource='source ~/.zshrc'
