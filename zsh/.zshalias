##################################################
#global aliases
##################################################

alias -g less='less -R'
alias -g tree='tree -C'
alias -g ls='ls --color'
alias -g grep='grep --color=auto'


## pipe aliases
alias -g pl=' | less'
alias -g pg=' | grep'

##################################################
#ls aliases
##################################################

alias ll='ls -lAh'
alias l='ls -lh' 
alias sll='ll | less -R'

##################################################
#grep aliases
##################################################

alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

##################################################
# emacs aliases
##################################################

alias tmacs='emacs -nw'
alias owd='emacs -nw .'

##################################################
# HP aliases
##################################################

alias tt='sudo !!' # TT = time turner
alias avada-kedavra='shutdown now'
alias stupefy='systemctl hybrid-sleep'
#alias alohomora='gnome-open'

##################################################
alias stree='tree | less'
alias zsource='source ~/.zshrc'

##################################################
# xsel stuff
##################################################
alias -g mcp='$(xsel -po)
alias -g ccp='$(xsel -bo)
alias -g pcp='| xsel'

##################################################
# directories alieas
##################################################
alias sandbox="cd ~/sandbox"
alias pbj="cd ~/pbj"
alias projects="cd ~/projects"
alias rc="cd ~/configs"
